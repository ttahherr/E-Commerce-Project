			<label class="form-label">@Html.DisplayNameFor(Actor =>Actor._Actors)</label>
			<select asp-for="_Actors"  class="form-control" aria-label="Default select example">
				<option selected disabled>--select Movie--</option>

			</select>
			<span asp-validation-for="_Actors" class="text-danger"></span>
		</div *@

		<div class="mt-4">
			<label class="form-lable">@Html.DisplayNameFor(Movie => Movie._Actors)</label>
			<select multiple asp-for="Category" class="form-select" aria-label="Default select example" asp-items="@(new SelectList(ViewBag.Actors , "Id" , "Name"  ) )">
				<option selected>--Select Actors--</option>

			</select>
		</div>


		<div class="mt-4">
			<label class="form-lable">@Html.DisplayNameFor(Movie => Movie.ImageFile)</label>
			<input type="file" asp-for="ImageFile" class="form-control" accept="image/*" id="ImageFile" onchange="PreViewImage()" />
			<span asp-validation-for="ImageFile" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary mt-4">Create</button>
	</form>
</div>